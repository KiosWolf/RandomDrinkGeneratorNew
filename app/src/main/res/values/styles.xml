<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/cocktail_glass</item>
    </style>

    <style name="DrunkTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/drunk</item>
    </style>

    <style name="HandTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/hand</item>
    </style>

</resources>
